@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var loggedIn = Tools.TokenHelper.IsTokenSession(HttpContext.Session.GetString("AuthToken"));
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div>
    @if (!Model.Games.Any())
    {
        <p>No s'ha trobat cap joc</p>
    }
    else
    {
        <table class="table">
            <thread>
                <tr>
                    <th>Nom</th>
                    <th>Descripció</th>
                    <th>Desarollat</th>
                    <th>Vots</th>
                </tr>
            </thread>
            <tbody>
                @foreach (var game in Model.Games)
                {
                    <tr>
                        <td>@game.Title</td>
                        <td>@game.Description</td>
                        <td>@game.DeveloperTeam</td>
                        <td>@game.Votes.Count</td>
                        <td>
                            @if (Tools.TokenHelper.IsTokenAdmin(HttpContext.Session.GetString("AuthToken")))
                            {
                                <form method="post" asp-page-handler="Delete" asp-route-id="@game.Id" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm" disabled title="Només per usuaris autenticats">
                                    <i class="bi bi-trash"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
        </table>
    }
</div>
